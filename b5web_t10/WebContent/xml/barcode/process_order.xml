<?xml version="1.0"?>
<!DOCTYPE barcode SYSTEM "barcode4j-code128.dtd">

<barcode>
  <code128>
      <height>{length:50mm}</height>
      <module-width>{length:0.21mm}</module-width>
      <quiet-zone enabled="{boolean:true}">{length:10mw}</quiet-zone>
      <human-readable>
        <placement>{human-readable-placement:top}</placement>
        <font-name>{font-name:Helvetica}</font-name>
        <font-size>{length:8pt}</font-size>
      </human-readable>
  </code128>
</barcode>