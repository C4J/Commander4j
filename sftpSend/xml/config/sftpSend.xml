<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sftpSend>
        <security>
        	<authType>userPass</authType>
            <username>aaaaa</username>
            <password>bbbbb</password>  
            <StrictHostKeyChecking>no</StrictHostKeyChecking>
            <knownHostsFile>./ssh/known_hosts</knownHostsFile>
        </security>
        
        <source>
            <localDir>./send/</localDir>
            <localFileMask>*.xml"</localFileMask>
        </source>

        <destination>
            <remoteHost>ns2.6info.fr</remoteHost>
            <remoteDir>/path/</remoteDir>     
        </destination>

    </sftpSend>
</config>
